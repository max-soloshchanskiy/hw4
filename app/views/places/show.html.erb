<div class="container">
  <h1><%= @place["name"] %></h1>
</div>

<div class="container">

  <div class="row">
    <p>
      <a href="/posts/new?place_id=<%= @place["id"] %>" class ="btn btn-primary">New Post</a>
    </p>
  </div>


  <div class="row">
    <% if @current_user %>
      <% for post in @posts %>
        <div class="col-md-6 col-lg-3">
          <h3><%= post["title"] %></h3>
          <h4><%= post["posted_on"] %></h4>
          <p><%= post["description"] %></p>
        </div>
      <% end %>
    <% end %>
  </div>




  <p>
    <a href="/places">Back to All Places</a>
  </p>

</div>